{
  "application": {
    "hostname": "workstation.cybersmith.local",
    "port": 3001,
    "publicPort": 3001,
    "entityId": "samlapp1",
    "baseUrl": "https://workstation.cybersmith.local:3001",
    "samlSigningCertificate": "certsAndKeys/sp-cert.pem",
    "samlSigningPrivateKey": "certsAndKeys/sp-key.pem",
    "signSamlRequests": true,
    "useHttps": false,
    "serverCertificate": "certsAndKeys/server-cert.pem",
    "serverPrivateKey": "certsAndKeys/server-key.pem"
  },
  "identityProviders": [
    {
      "protocol": "saml20",
      "name": "Verify IdP",
      "binding": "redirect",      
      "loginUrl": "https://cybersmith.verify.ibm.com/saml/sps/saml20ip/saml20/login",
      "logoutUrl": "https://cybersmith.verify.ibm.com/idaas/mtfim/sps/idaas/logout",
      "certificate": "cybersmith.verify.ibm.com.cer"
    },
    {
      "protocol": "oidc",
      "name": "Example OIDC IdP",
      "tenantUrl": "https://login.example.com/tenant-id",
      "issuerUrl": "https://login.example.com/tenant-id/v2.0",
      "authorizationUrl": "https://login.example.com/tenant-id/oauth2/v2.0/authorize",
      "tokenUrl": "https://login.example.com/tenant-id/oauth2/v2.0/token",
      "userInfoUrl": "https://graph.example.com/oidc/userinfo",
      "metadataUrl": "https://login.example.com/tenant-id/v2.0/.well-known/openid-configuration",
      "clientId": "your-client-id",
      "clientSecret": "your-client-secret",
      "scope": "openid profile email"
    }
  ]
}
